@{
    ViewData["Title"] = "Yönetim Paneli";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold"> Yönetim Paneli</h2>
            <p class="text-muted mb-0">Sistem durumunu canlı takip edin.</p>
        </div>
        <span class="badge bg-success p-2">Canlı Veriler Aktif</span>
    </div>

    <div class="row text-center mb-5">

        <div class="col-md-3">
            <div class="card text-white bg-success mb-3 shadow h-100">
                <div class="card-header fw-bold">Aylık Ciro</div>
                <div class="card-body">
                    <h3 class="card-title display-6 fw-bold" id="txtRevenue">
                        <div class="spinner-border spinner-border-sm" role="status"></div>
                    </h3>
                    <p class="card-text opacity-75">@DateTime.Now.ToString("MMMM yyyy") Dönemi</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-dark bg-warning mb-3 shadow h-100">
                <div class="card-header fw-bold">⚠️ Onay Bekleyen</div>
                <div class="card-body">
                    <h3 class="card-title display-6 fw-bold" id="txtPending">
                        <div class="spinner-border spinner-border-sm" role="status"></div>
                    </h3>
                    <p class="card-text">İncelenmesi Gereken</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3 shadow h-100">
                <div class="card-header fw-bold">Eğitmenler</div>
                <div class="card-body">
                    <h3 class="card-title display-6 fw-bold text-white" id="txtTrainers">
                        <div class="spinner-border spinner-border-sm" role="status"></div>
                    </h3>
                    <p class="card-text opacity-75">Aktif Personel</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3 shadow h-100">
                <div class="card-header fw-bold">En Popüler</div>
                <div class="card-body">
                    <h4 class="card-title fw-bold mt-2" id="txtPopular">
                        <div class="spinner-border spinner-border-sm" role="status"></div>
                    </h4>
                    <p class="card-text opacity-75">En Çok Tercih Edilen</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Hızlı İşlemler</h5>
                </div>
                <div class="list-group list-group-flush">

                    <a asp-controller="Appointments" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3">
                        <div>
                            <strong>📅 Randevu Talepleri</strong>
                            <br>
                            <small class="text-muted">Gelen randevuları onayla veya reddet.</small>
                        </div>
                        <span class="badge bg-primary rounded-pill">Git -></span>
                    </a>

                    <a asp-controller="Trainers" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3">
                        <div>
                            <strong>🏋️ Antrenör Yönetimi</strong>
                            <br>
                            <small class="text-muted">Yeni antrenör ekle veya bilgilerini düzenle.</small>
                        </div>
                        <span class="badge bg-secondary rounded-pill">Yönet</span>
                    </a>

                    <a asp-controller="Services" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3">
                        <div>
                            <strong>🧘 Hizmet & Fiyat Yönetimi</strong>
                            <br>
                            <small class="text-muted">Ders ücretlerini ve sürelerini ayarla.</small>
                        </div>
                        <span class="badge bg-secondary rounded-pill">Yönet</span>
                    </a>

                    <a asp-controller="Reports" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3">
                        <div>
                            <strong>📊 Detaylı Raporlar</strong>
                            <br>
                            <small class="text-muted">Geçmişe dönük analizler ve API testleri.</small>
                        </div>
                        <span class="badge bg-info text-dark rounded-pill">İncele</span>
                    </a>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Sayfa yüklenir yüklenmez API'den güncel verileri çek
            $.ajax({
                url: '/api/FitnessApi/Stats',
                type: 'GET',
                success: function (data) {
                    // API'den dönen JSON verilerini kutucuklara yerleştir

                    // 1. Ciro (Para birimi simgesiyle)
                    $('#txtRevenue').text(data.revenue + ' ₺');

                    // 2. Bekleyen Randevu Sayısı
                    $('#txtPending').text(data.pendingCount);

                    // 3. Eğitmen Sayısı
                    $('#txtTrainers').text(data.trainers);

                    // 4. Popüler Hizmet Adı
                    $('#txtPopular').text(data.popularService);
                },
                error: function () {
                    // Hata olursa kullanıcıya bildir
                    $('#txtRevenue').text("-");
                    $('#txtPending').text("-");
                    console.error("İstatistikler çekilemedi.");
                }
            });
        });
    </script>
}