@{
    ViewData["Title"] = "Yönetim Paneli";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"> Yönetim Paneli</h2>
        <span class="badge bg-secondary">Canlı Veriler</span>
    </div>

    <div class="row text-center mb-5">

        <div class="col-md-3">
            <div class="card text-white bg-success mb-3 shadow h-100">
                <div class="card-header">Toplam Ciro</div>
                <div class="card-body">
                    <h3 class="card-title display-6 fw-bold" id="txtRevenue">
                        <div class="spinner-border spinner-border-sm" role="status"></div>
                    </h3>
                    <p class="card-text">Beklenen Gelir</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3 shadow h-100">
                <div class="card-header">Randevular</div>
                <div class="card-body">
                    <h3 class="card-title display-6 fw-bold" id="txtAppointments">
                        <div class="spinner-border spinner-border-sm" role="status"></div>
                    </h3>
                    <p class="card-text">Toplam Ders Kaydı</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3 shadow h-100">
                <div class="card-header">Eğitmenler</div>
                <div class="card-body">
                    <h3 class="card-title display-6 fw-bold text-dark" id="txtTrainers">
                        <div class="spinner-border spinner-border-sm" role="status"></div>
                    </h3>
                    <p class="card-text text-dark">Aktif Personel</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3 shadow h-100">
                <div class="card-header">En Popüler</div>
                <div class="card-body">
                    <h4 class="card-title fw-bold" id="txtPopular">
                        <div class="spinner-border spinner-border-sm" role="status"></div>
                    </h4>
                    <p class="card-text">En Çok Seçilen</p>
                </div>
            </div>
        </div>
    </div>

    <h4 class="mb-3">Hızlı İşlemler</h4>
    <div class="list-group">
        <a asp-controller="Trainers" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            🏋️ Antrenörleri Yönet
            <span class="badge bg-primary rounded-pill">Listele</span>
        </a>
        <a asp-controller="Services" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            🧘 Hizmetleri ve Fiyatları Yönet
            <span class="badge bg-primary rounded-pill">Listele</span>
        </a>
        <a asp-controller="Reports" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            📊 Detaylı Raporlar (API Test Ekranı)
            <span class="badge bg-warning text-dark rounded-pill">İncele</span>
        </a>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Sayfa açılınca API'ye git ve verileri çek
            $.ajax({
                url: '/api/FitnessApi/Stats',
                type: 'GET',
                success: function (data) {
                    // Sayılar gelince animasyonlu şekilde yerleştir
                    $('#txtRevenue').text(data.revenue + ' ₺');
                    $('#txtAppointments').text(data.appointments);
                    $('#txtTrainers').text(data.trainers);
                    $('#txtPopular').text(data.popularService);
                },
                error: function () {
                    $('#txtRevenue').text("Hata!");
                }
            });
        });
    </script>
}