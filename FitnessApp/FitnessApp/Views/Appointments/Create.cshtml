@model FitnessApp.Web.Models.Appointment

@{
    ViewData["Title"] = "Randevu Al";
}

@if (TempData["Hata"] != null)
{
    <div class="alert alert-danger">
        ⚠️ <strong>Bir sorun oluştu:</strong> @TempData["Hata"]
    </div>
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">📅 Yeni Randevu Oluştur</h3>
                </div>
                <div class="card-body p-4">

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-floating mb-3">
                            <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.ServiceId"></select>
                            <label asp-for="ServiceId">Hizmet Seçiniz</label>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="TrainerId" class="form-select" asp-items="ViewBag.TrainerId" id="trainerSelect">
                                <option value="">Önce Antrenör Seçin</option>
                            </select>
                            <label asp-for="TrainerId">Antrenör Seçiniz</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Tarih" type="date" class="form-control" id="dateSelect"
                                   min="@DateTime.Now.ToString("yyyy-MM-dd")" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <label asp-for="Tarih">Tarih Seçiniz</label>
                            <span asp-validation-for="Tarih" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Müsait Saatler:</label>
                            <div id="saatContainer" class="d-flex flex-wrap gap-2">
                                <div class="alert alert-secondary w-100">
                                    Lütfen önce Antrenör ve Tarih seçiniz...
                                </div>
                            </div>

                            <input type="hidden" asp-for="Saat" id="selectedSaat" required />
                            <span asp-validation-for="Saat" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Randevuyu Tamamla ✅</button>
                        </div>
                    </form>

                </div>
            </div>
            <div class="text-center mt-3">
                <a asp-action="Index" class="text-muted">Listeye Geri Dön</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {

            // Başlangıçta Antrenör ve Tarih kısımlarını pasif yapalım
            $('#trainerSelect').prop('disabled', true);
            $('#dateSelect').prop('disabled', true);

            // 1. HİZMET SEÇİLİNCE -> UYGUN HOCALARI GETİR
            $('#ServiceId').change(function () {
                var serviceId = $(this).val();

                // Temizlik: Hoca listesini boşalt ve varsayılanı ekle
                $('#trainerSelect').empty().append('<option value="">Önce Antrenör Seçin</option>');
                $('#trainerSelect').prop('disabled', true);
                $('#dateSelect').prop('disabled', true);
                $('#saatContainer').empty().append('<div class="alert alert-secondary w-100">Lütfen önce Hizmet, sonra Antrenör ve Tarih seçiniz...</div>');

                if (serviceId) {
                    $.ajax({
                        url: '/Appointments/GetTrainersByService',
                        type: 'GET',
                        data: { serviceId: serviceId },
                        success: function (data) {
                            // Gelen hocaları listeye ekle
                            $.each(data, function (index, item) {
                                $('#trainerSelect').append(`<option value="${item.id}">${item.adSoyad} (${item.uzmanlik})</option>`);
                            });

                            // Eğer hoca varsa kilidi aç
                            if (data.length > 0) {
                                $('#trainerSelect').prop('disabled', false);
                            } else {
                                $('#trainerSelect').append('<option value="">Bu alanda uygun hoca bulunamadı</option>');
                            }
                        }
                    });
                }
            });

            // 2. HOCA SEÇİLİNCE -> TARİHİ AKTİF ET
            $('#trainerSelect').change(function() {
                if ($(this).val()) {
                    $('#dateSelect').prop('disabled', false);
                    // Eğer tarih zaten seçiliyse saatleri de güncelle
                    if ($('#dateSelect').val()) {
                        GetSaatler($(this).val(), $('#dateSelect').val());
                    }
                } else {
                    $('#dateSelect').prop('disabled', true);
                }
            });

            // 3. TARİH DEĞİŞİNCE -> SAATLERİ GETİR
            $('#dateSelect').change(function () {
                var trainerId = $('#trainerSelect').val();
                var date = $(this).val();

                if (trainerId && date) {
                    GetSaatler(trainerId, date);
                }
            });

            function GetSaatler(trainerId, date) {
                $('#saatContainer').html('<div class="spinner-border text-primary" role="status"><span class="visually-hidden">Yükleniyor...</span></div>');

                $.ajax({
                    url: '/Appointments/GetMusaitSaatler',
                    type: 'GET',
                    data: { trainerId: trainerId, date: date },
                    success: function (data) {
                        $('#saatContainer').empty();

                        $.each(data, function (index, item) {
                            var btnClass = item.doluMu ? 'btn-outline-danger disabled' : 'btn-outline-success';
                            var icon = item.doluMu ? '❌' : '🟩';
                            var disabledAttr = item.doluMu ? 'disabled' : '';

                            var btnHtml = `<button type="button"
                                            class="btn ${btnClass} saat-btn"
                                            data-saat="${item.saat}" ${disabledAttr}
                                            style="min-width: 100px;">
                                            ${item.saat} <br> <small>${item.doluMu ? 'Dolu' : 'Müsait'}</small>
                                           </button>`;

                            $('#saatContainer').append(btnHtml);
                        });

                        $('.saat-btn').click(function () {
                            $('.saat-btn').removeClass('btn-success text-white').addClass('btn-outline-success');
                            $(this).removeClass('btn-outline-success').addClass('btn-success text-white');
                            $('#selectedSaat').val($(this).data('saat'));
                        });
                    }
                });
            }
        });
    </script>
}