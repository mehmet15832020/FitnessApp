@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">FitnessApp</h1>
        <p class="lead text-muted">Sağlıklı yaşam ve profesyonel takip sistemi.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-5 text-center">

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div class="mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-person-circle text-primary mb-3" viewBox="0 0 16 16">
                                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                            </svg>
                            <h3>Kullanıcı Girişi</h3>
                            <p class="text-muted">Randevu almak veya yönetim paneline erişmek için giriş yapınız.</p>
                        </div>

                        <div class="d-grid gap-3">
                            <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Login">
                                🔐 Güvenli Giriş Yap
                            </a>

                            <div class="text-center mt-2">
                                <span class="text-muted">Hesabınız yok mu?</span>
                                <a asp-area="Identity" asp-page="/Account/Register" class="text-decoration-none fw-bold">
                                    Hemen Kayıt Ol
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-check-circle-fill text-success mb-3" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                            </svg>
                            <h3 class="text-success">Hoş Geldiniz!</h3>
                            <p class="fw-bold">@User.Identity.Name</p>
                        </div>

                        <div class="d-grid gap-2">
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="btn btn-danger btn-lg" asp-controller="Admin" asp-action="Index">
                                    🔧 Yönetim Paneline Git
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-primary btn-lg" asp-controller="Appointments" asp-action="Index">
                                    📅 Randevularıma Git
                                </a>
                            }
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>