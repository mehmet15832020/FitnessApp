@model FitnessApp.Web.Models.Service

@{
    ViewData["Title"] = "Hizmeti Düzenle";
}

<div class="container mt-4">
    <h1>Hizmeti Düzenle</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-floating mb-3">
                    <input asp-for="Isim" class="form-control" placeholder="Hizmet Adı" />
                    <label asp-for="Isim">Hizmet Adı</label>
                    <span asp-validation-for="Isim" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Sure" class="form-control" placeholder="60" type="number" />
                    <label asp-for="Sure">Süre (Dakika)</label>
                    <span asp-validation-for="Sure" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Ucret" class="form-control" placeholder="0.00" type="number" step="0.01" />
                    <label asp-for="Ucret">Ücret (TL)</label>
                    <span asp-validation-for="Ucret" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary btn-lg">💾 Değişiklikleri Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}