@model IEnumerable<FitnessApp.Web.Models.Trainer>

@{
    ViewData["Title"] = "Eğitmenlerimiz";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="display-4 fw-bold">Eğitmenlerimiz</h2>
        <p class="text-muted">Hedeflerinize ulaşmanız için yanınızda olan uzman kadromuz.</p>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-dark mt-2">+ Yeni Eğitmen Ekle</a>
        }
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow border-0 hover-effect">
                    <img src="https://ui-avatars.com/api/?name=@item.AdSoyad&background=1a1a1a&color=fff&size=300"
                         class="card-img-top" alt="@item.AdSoyad" style="height: 300px; object-fit: cover;">

                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">@item.AdSoyad</h5>
                        <p class="card-text text-primary">@item.UzmanlikAlani</p>
                        <hr />
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm">Profil</a>

                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Kartın üzerine gelince hafif yukarı kalkması için */
    .hover-effect {
        transition: transform 0.3s ease;
    }
    .hover-effect:hover {
        transform: translateY(-10px);
    }
</style>